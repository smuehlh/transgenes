<% id = html_compatible_enhancer_name(@enhancer.name) %>
// show errors and info messages (if there is need to is handled in the partial)
<%= render partial: 'enhancers/create/error', locals: {id: id} %>
<%= render partial: 'enhancers/create/success', locals: {id: id} %>
<%= render partial: 'enhancers/create/multigene' %>

// update gene record preview
var id = "#input-view-<%= id %>";
$(id).html("<%= escape_javascript(render partial: 'viewer', locals: {enhancer: @enhancer} ) %>");
$(id).trigger("contentchange");

// set up tooltips in the updated preview
$('[data-toggle="tooltip"]').tooltip();

// show statistics about uploaded data and ensure they are displayed correctly
$("#input-view-stats").html("<%= escape_javascript(render partial: 'stats') %>")
toggle_stats_depending_on_intron_checkbox();