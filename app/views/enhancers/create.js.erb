// show errors and info messages (all partial show only if there are errors)
$("#error-container").html(
    "<%= escape_javascript(render partial: 'enhancers/create/error') %>"
);
$("#multigene-container").html(
    "<%= escape_javascript(render partial: 'enhancers/create/multigene') %>"
);
$("#multiple-genes-info").modal('show');

// update gene record preview
var id;
switch("<%= @enhancer.name %>") {
    case "5'UTR":
        id = "#input-view-five";
        break;
    case "CDS":
        id = "#input-view-cds";
        break;
    case "3'UTR":
        id = "#input-view-three";
        break;
}
$(id).html("<%= escape_javascript(render partial: 'viewer') %>");
$(id).trigger("contentchange");

// set up tooltips in the updated preview
$('[data-toggle="tooltip"]').tooltip();