// show errors and info messages (if there is need to is handled in the partial)
$("#error-container").html(
    "<%= escape_javascript(render partial: 'enhancers/create/error') %>"
);
$("#multigene-container").html(
    "<%= escape_javascript(render partial: 'enhancers/create/multigene') %>"
);

// update gene record preview
var id;
// NOTE: use <%==, as the "'" should not be escaped for string-comparision.
switch("<%== @enhancer.name %>") {
    case "5'UTR": id = "#input-view-five";
    break;
    case "CDS": id = "#input-view-cds";
    break;
    case "3'UTR": id = "#input-view-three";
    break;
}
$(id).html("<%= escape_javascript(render partial: 'viewer', locals: {enhancer: @enhancer} ) %>");
$(id).trigger("contentchange");

// set up tooltips in the updated preview
$('[data-toggle="tooltip"]').tooltip();