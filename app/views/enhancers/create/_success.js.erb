$("#success-alert-<%= id %>").hide(); // default setting
<% if flash.now[:success] %>
    $("#success-alert-<%= id %>").show();
    $("#success-alert-text-<%= id %>").show();
    $("#success-alert-text-<%= id %>").html(
        "<%= escape_javascript(render partial: 'enhancers/create/sequence_modal', locals: {enhancer: @enhancer, id: id, statistics: statistics} ) %>"
    );

    $("#input-view-stats").html("<%= escape_javascript(render partial: 'enhancers/create/stats', locals: {statistics: statistics} ) %>");

    enable_params_partial();
    toggle_stats_depending_on_intron_checkbox();
<% end %>