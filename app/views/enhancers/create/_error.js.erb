<% if flash.now[:error] %>
    $("#error-alert-<%= id %>").show();
    $("#error-alert-text-<%= id %>").show();
    $("#error-alert-text-<%= id %>").html(
        "<%= escape_javascript(render partial: 'enhancers/create/debuginfo_modal', locals: {id: id} ) %>"
    );
<% else %>
    $("#error-alert-<%= id %>").hide();
<% end %>