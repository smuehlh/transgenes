<% if flash.now[:error].blank? %>
    $("#error-alert-<%= id %>").hide();
<% else %>
    $("#error-alert-<%= id %>").show();
    // display warning only if no error occurred!
    $("#error-alert-text-<%= id %>").html(
        "<%= escape_javascript(flash.now[:error]).gsub('\\n', '<br>') %>"
    );
<% end %>