<% if @enhancer.records.size > 1 %>
    <% unless params[:line] %>
        <!-- display modal only first time multiple records are submitted. everything else is too much.  -->
        $("#multigene-info-container").html(
            "<%= escape_javascript(render 'enhancers/create/multigene_info') %>"
        );
        $("#multiple-genes-info").modal('show');
        $("#multigene-info-container > a").hide();
    <% end %>

    $("#multigene-options").html(
        "<%= escape_javascript(render 'enhancers/create/multigene_formelements') %>"
    );
<% end %>