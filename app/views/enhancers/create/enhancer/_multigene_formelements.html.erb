<%= fields_for :records do |f_record| %>
   <% record_options = @enhancer.records.map do |record|
            wrapped_data = word_wrap_breaking_single_word(record.data, 80)
            teaser = teaser_wrapped_single_word_with_ellipsis(wrapped_data)
            ["l.#{record.line}: #{teaser}", record.line, {:class => 'monospaced'}]
   end %>
   <legend class="text-primary">Select gene record to use</legend>
   <%= f_record.select :line, options_for_select(record_options, @selected_line), {}, {class: 'form-control monospaced'} %>
<% end %>