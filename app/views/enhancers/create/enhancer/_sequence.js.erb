// display info about current sequence
<% if @enhancer.data %>
    $("#success-alert-text-<%= id %>").show();
    $("#success-alert-text-<%= id %>").html(
        "<%= escape_javascript(render partial: 'enhancers/create/enhancer/sequence_modal', locals: {id: id} ) %>"
    );
<% end %>

// display info about all sequences
<% if @statistics[:uploaded_resources].any? %>
    $("#warning-alert-all-input").show();
    $("#warning-alert-text-all-input").show();
    $("#warning-alert-text-all-input").html("<%= escape_javascript(render partial: 'enhancers/create/enhancer/sequences_info') %>");
<% else %>
    $("#warning-alert-all-input").hide();
<% end %>