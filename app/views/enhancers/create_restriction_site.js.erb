<%
    id = "sites-#{@kind}"
    data =
        if @kind == "keep"
            @restriction_enzyme.to_keep
        else
            @restriction_enzyme.to_avoid
        end
%>
<%= render partial: 'enhancers/create/error', locals: {id: id} %>
<%= render partial: 'enhancers/create/success', locals: {id: id} %>
<%= render partial: 'enhancers/create/restriction_site/sequence', locals: {id: id, data: data} %>